# Telegram bot token (get from @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# RabbitMQ configuration
RABBITMQ_URL=amqp://user:password@rabbitmq:5672/

# MinIO configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

# OpenRouter API configuration (replaces OpenAI)
# Get your free API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_PROMPT="Analyze this image and provide title, description (up to 200 characters), and 49 keywords in English for stock photo use."

# AI Model Configuration
MODEL_SELECTION_INTERVAL=24h  # How often to check for new models
MODEL_RETRY_INTERVAL=1h       # How often to retry when no models available
MAX_QUEUE_SIZE=1000          # Maximum queued requests during downtime

# Processing Configuration
MAX_TOKENS=300
TEMPERATURE=0.7
RESPONSE_TIMEOUT=30s

# Server configuration
SERVER_PORT=8080

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
