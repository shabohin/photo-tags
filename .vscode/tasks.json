{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run All Checks",
            "type": "shell",
            "command": "make",
            "args": ["check"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "make",
            "args": ["test"],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": {
                "owner": "go-test",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": [
                    {
                        "regexp": "^\\s+(.+):(\\d+):\\s+(.+)$",
                        "file": 1,
                        "line": 2,
                        "message": 3
                    }
                ]
            }
        },
        {
            "label": "Run Linting",
            "type": "shell",
            "command": "./scripts/lint.sh",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": {
                "owner": "golangci-lint",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": [
                    {
                        "regexp": "^(.+):(\\d+):(\\d+):\\s+(.+)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "message": 4
                    }
                ]
            }
        },
        {
            "label": "Auto-fix Linting Issues",
            "type": "shell",
            "command": "./scripts/fix-lint.sh",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Fix Dependencies",
            "type": "shell",
            "command": "make",
            "args": ["deps"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": "make",
            "args": ["fmt"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Pre-commit Checks",
            "type": "shell",
            "command": "make",
            "args": ["pre-commit"],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Setup Environment",
            "type": "shell",
            "command": "./scripts/setup.sh",
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Services",
            "type": "shell",
            "command": "make",
            "args": ["build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Services",
            "type": "shell",
            "command": "make",
            "args": ["start"],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Stop Services",
            "type": "shell",
            "command": "make",
            "args": ["stop"],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}
