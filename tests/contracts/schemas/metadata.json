{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/shabohin/photo-tags/schemas/metadata.json",
  "title": "Metadata",
  "description": "Image metadata structure",
  "type": "object",
  "required": ["title", "description", "keywords"],
  "properties": {
    "title": {
      "type": "string",
      "description": "Image title",
      "minLength": 1,
      "maxLength": 500
    },
    "description": {
      "type": "string",
      "description": "Image description",
      "minLength": 1,
      "maxLength": 2000
    },
    "keywords": {
      "type": "array",
      "description": "List of image keywords",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100
      },
      "minItems": 0,
      "maxItems": 50
    }
  },
  "additionalProperties": false
}
